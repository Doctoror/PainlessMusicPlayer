<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.doctoror.fuckoffmusicplayer.presentation.nowplaying.NowPlayingActivityModel"/>
    </data>

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="InconsistentLayout">

        <include
            layout="@layout/activity_nowplaying_full_art"
            app:model="@{model}"/>

        <com.doctoror.fuckoffmusicplayer.widget.WindowBackgroundPaddingInsetsFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">

            <include
                layout="@layout/navigation_view"/>

        </com.doctoror.fuckoffmusicplayer.widget.WindowBackgroundPaddingInsetsFrameLayout>

    </android.support.v4.widget.DrawerLayout>

</layout>
